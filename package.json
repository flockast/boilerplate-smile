{
  "name": "boilerplate-smile",
  "version": "2.0.2",
  "main": "src/js/index.js",
  "license": "MIT",
  "config": {
    "src": {
      "base": "./src",
      "styles": "/styles/index.scss",
      "js": "/js/index.js",
      "img": "/img",
      "fonts": "/fonts"
    },
    "build": {
